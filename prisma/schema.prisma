generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cidade {
  id        String   @id @default(cuid())
  nome      String   @unique
  estado    String
  ativa     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  anuncios  Anuncio[]
}

model Anuncio {
  id          String   @id @default(cuid())
  nomeArtistico String
  idade       Int
  descricao   String?
  whatsapp    String
  telefone    String?
  cidadeId    String
  destaque    Boolean  @default(false)
  estrelas    Int      @default(3)
  ativo       Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  cidade      Cidade   @relation(fields: [cidadeId], references: [id])
  fotos       Foto[]
}

model Foto {
  id        String   @id @default(cuid())
  url       String
  principal Boolean  @default(false)
  anuncioId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  anuncio   Anuncio   @relation(fields: [anuncioId], references: [id])
}

model ConfigSite {
  id                  String   @id @default(cuid())
  nomeSite            String   @default("Acompanhantes VIP")
  whatsappComercial   String?
  telefoneComercial   String?
  corPrimaria         String   @default("#8b5cf6")
  corSecundaria       String   @default("#ec4899")
  corDestaque         String   @default("#f59e0b")
  temaEscuro          Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}